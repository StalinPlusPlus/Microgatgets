<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_border_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="26dp">

            <TextView
                android:id="@+id/textViewTakeCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Товар успешно\nдобавлен в корзину"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/imageButtonClose"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/button_close_orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="13dp"
                android:background="@android:color/transparent"/>

            <ImageView
                android:id="@+id/imageViewPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/professional_buy_main"
                app:layout_constraintTop_toBottomOf="@id/textViewTakeCart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>

            <TextView
                android:id="@+id/textViewNamePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional"
                app:layout_constraintTop_toBottomOf="@id/imageViewPicture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appCompatButtonResume"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewNamePicture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_main"
                android:text="Продолжить покупки"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="13sp"
                android:layout_marginTop="23dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appCompatButtonOpenCart"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/appCompatButtonResume"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="13dp"
                android:background="@drawable/button_orange"
                android:text="Перейти в корзину"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/textViewRecomend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/appCompatButtonOpenCart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Рекомендуем купить:"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="36dp"/>

            <ImageView
                android:id="@+id/imageViewPictureRecomend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewRecomend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/stick_and_dinamyc_image"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/textViewRecomendName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Извлекатель + динамик"
                app:layout_constraintTop_toBottomOf="@id/imageViewPictureRecomend1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/textViewCostRecomend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewRecomendName1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Цена: 300 ₽"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="19dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appCompatButtonPutRecomend1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewCostRecomend1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_main"
                android:text="Добавить в корзину"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="13dp"
                android:layout_marginTop="7dp"/>

            <ImageView
                android:id="@+id/imageViewPictureRecomend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/appCompatButtonPutRecomend1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/safe_dynamic_image"
                android:layout_marginTop="34dp"/>

            <TextView
                android:id="@+id/textViewRecomendName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imageViewPictureRecomend2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Безопасный динамик"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/textViewCostRecomend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewRecomendName2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Цена: 100 ₽"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="19dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appCompatButtonPutRecomend2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewCostRecomend2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_main"
                android:text="Добавить в корзину"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="13dp"
                android:layout_marginTop="7dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>